{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "builds": [
      { "src": "server/vercel-handler.ts", "use": "@vercel/node" },
      { "src": "dist/public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/vercel-handler.ts" },
      { "src": "/(.*)", "dest": "dist/public/$1" }
    ]
  }