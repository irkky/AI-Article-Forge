{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "server/vercel-handler.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/public/**",
          "server/app.js",
          "server/app.ts",
          "server/routes.js",
          "server/routes.ts",
          "server/vite.js",
          "server/vite.ts"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server/vercel-handler.ts" }
  ]
}